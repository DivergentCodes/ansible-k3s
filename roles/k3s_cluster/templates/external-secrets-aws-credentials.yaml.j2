apiVersion: v1
kind: Secret
type: Opaque
metadata:
  name: aws-ssm-credentials
  namespace: kube-system
data:
  access-key: "{{ hostvars['localhost']['aws_iam_user_new_key']['access_key']['access_key_id'] | b64encode }}"
  secret-access-key: "{{ hostvars['localhost']['aws_iam_user_new_key']['secret_access_key'] | b64encode }}"
